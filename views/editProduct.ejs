<%- include('header') %>

<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Product</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Library</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <% if(message.success.length> 0){ %>
            <div class="alert alert-success" role="alert">
                <%= message.success %>
            </div>
        <% } %>
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <form class="form-horizontal" method="post" action="/postEditproduct" enctype="multipart/form-data">
                        <input type="hidden" name="editid" value="<%= single.id %>">
                        <div class="card-body">
                            <h4 class="card-title">Product</h4>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Category Name</label>
                                <div class="col-sm-9">
                                    <!-- <input type="text" name="category" class="form-control" id="fname" value="" placeholder="Enter Category"> -->
                                    <select name="category" class="form-control" disabled>
                                        <option>---Select Category---</option>
                                        <% category.map((val)=>{ %>
                                            <option <% if(val.id == single.categoryId) { %> selected <% } %> value="<%= val.id %>"><%= val.category %></option>
                                        <% }) %>                                         
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Sub Category Name</label>
                                <div class="col-sm-9">
                                    <!-- <input type="text" name="category" class="form-control" id="fname" value="" placeholder="Enter Category"> -->
                                    <select name="subcategory" class="form-control" disabled>
                                        <option>---Select Sub Category---</option>
                                        <% subcategory.map((val)=>{ %>
                                            <option <% if(val.id == single.subcategoryId) { %> selected <% } %> value="<%= val.id %>"><%= val.subcategory %></option>
                                        <% }) %>                                        
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Extra Sub Category</label>
                                <div class="col-sm-9">
                                    <select name="exsubcategory" class="form-control" disabled>
                                        <option>---Select Ex-Sub Category---</option> 
                                        <% exsubcategory.map((val)=>{ %>
                                            <option <% if(val.id == single.exsubcategoryId) { %> selected <% } %> value="<%= val.id %>"><%= val.exsubcategory %></option>
                                        <% }) %>                                        
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Product</label>
                                <div class="col-sm-9">
                                    <input type="text" value="<%= single.product %>" name="product" class="form-control" id="fname" placeholder="Enter Product">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Price</label>
                                <div class="col-sm-9">
                                    <input type="text" value="<%= single.price %>" name="price" class="form-control" id="fname" placeholder="Enter Price">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Quantity</label>
                                <div class="col-sm-9">
                                    <input type="text" value="<%= single.quantity %>" name="quantity" class="form-control" id="fname" placeholder="Enter Quantity">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Description</label>
                                <div class="col-sm-9">
                                    <input type="text" value="<%= single.discription %>" name="discription" class="form-control" id="fname" placeholder="Add Description">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Product Image</label>
                                <div class="col-sm-9">
                                    <input type="file" name="image" class="form-control" id="fname">
                                    <% if(single){ %>
                                        <img src="<%= single.image %>" width="150">
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <input type="submit" value="Edit" class="btn btn-primary"></input>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        
        <!-- editor -->
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center">
        All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com">WrapPixel</a>.
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>

<%- include('footer') %>